{
  "name": "flutter-toolbox",
  "displayName": "flutter-toolbox",
  "description": "Comprehensive Flutter development toolkit with build automation (APK, IPA, Web), utilities (Clean, Pub Get, Build Runner, Analyze, Format, Pod Install), and MCP config generators. Real-time status tracking in sidebar.",
  "version": "0.0.1",
  "publisher": "skalex",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/pubspec.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flutter-toolbox",
          "title": "flutter-toolbox",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "flutter-toolbox": [
        {
          "id": "flutterToolboxView",
          "name": "Flutter Utils",
          "icon": "resources/icon.svg",
          "contextualTitle": "Flutter Utils"
        }
      ]
    },
    "commands": [
      {
        "command": "flutter-toolbox.buildApk",
        "title": "Flutter: Build APK",
        "icon": "$(device-mobile)"
      },
      {
        "command": "flutter-toolbox.buildIpa",
        "title": "Flutter: Build IPA",
        "icon": "$(device-mobile)"
      },
      {
        "command": "flutter-toolbox.buildWeb",
        "title": "Flutter: Build Web",
        "icon": "$(globe)"
      },
      {
        "command": "flutter-toolbox.refreshView",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "flutter-toolbox.clearSessions",
        "title": "Clear Build History",
        "icon": "$(clear-all)"
      },
      {
        "command": "flutter-toolbox.openOutputFolder",
        "title": "Open Output Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "flutter-toolbox.flutterVersion",
        "title": "Flutter: Check Version",
        "icon": "$(info)"
      },
      {
        "command": "flutter-toolbox.clean",
        "title": "Flutter: Clean",
        "icon": "$(trash)"
      },
      {
        "command": "flutter-toolbox.pubGet",
        "title": "Flutter: Pub Get",
        "icon": "$(cloud-download)"
      },
      {
        "command": "flutter-toolbox.cleanAndPubGet",
        "title": "Flutter: Clean & Pub Get",
        "icon": "$(sync)"
      },
      {
        "command": "flutter-toolbox.podInstall",
        "title": "Flutter: Pod Install",
        "icon": "$(package)"
      },
      {
        "command": "flutter-toolbox.buildRunner",
        "title": "Flutter: Build Runner",
        "icon": "$(gear)"
      },
      {
        "command": "flutter-toolbox.flutterAnalyze",
        "title": "Flutter: Analyze",
        "icon": "$(search)"
      },
      {
        "command": "flutter-toolbox.flutterFormat",
        "title": "Flutter: Format",
        "icon": "$(symbol-color)"
      },
      {
        "command": "flutter-toolbox.generateMcpConfig",
        "title": "Flutter: Generate FyUI MCP Config",
        "icon": "$(json)"
      },
      {
        "command": "flutter-toolbox.generateFyersLaunchConfig",
        "title": "Flutter: Generate Fyers Launch Config",
        "icon": "$(debug-alt)"
      },
      {
        "command": "flutter-toolbox.openRepository",
        "title": "Git: Open Repository",
        "icon": "$(repo)"
      },
      {
        "command": "flutter-toolbox.createPR",
        "title": "Git: Create Pull Request",
        "icon": "$(git-pull-request-create)"
      },
      {
        "command": "flutter-toolbox.viewPR",
        "title": "Git: View Pull Request",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "flutter-toolbox.openActions",
        "title": "Git: Open GitHub Actions",
        "icon": "$(pulse)"
      },
      {
        "command": "flutter-toolbox.openCurrentFile",
        "title": "Git: Open Current File on GitHub",
        "icon": "$(file-code)"
      },
      {
        "command": "flutter-toolbox.viewCurrentCommit",
        "title": "Git: View Current Commit",
        "icon": "$(git-commit)"
      },
      {
        "command": "flutter-toolbox.copyCommitHash",
        "title": "Git: Copy Commit Hash",
        "icon": "$(clippy)"
      },
      {
        "command": "flutter-toolbox.generateFreezedCubitState",
        "title": "Flutter: Generate Freezed Cubit/Bloc State",
        "icon": "$(symbol-class)"
      },
      {
        "command": "flutter-toolbox.generateFreezedApiState",
        "title": "Flutter: Generate Freezed API State",
        "icon": "$(symbol-interface)"
      },
      {
        "command": "flutter-toolbox.generateFreezedUiState",
        "title": "Flutter: Generate Freezed UI State",
        "icon": "$(symbol-struct)"
      },
      {
        "command": "flutter-toolbox.generateFreezedModel",
        "title": "Flutter: Generate Freezed Model",
        "icon": "$(symbol-property)"
      },
      {
        "command": "flutter-toolbox.addFlutterCursorRules",
        "title": "Flutter: Add Cursor Rules to Project",
        "icon": "$(files)"
      },
      {
        "command": "flutter-toolbox.setupGitAI",
        "title": "Flutter: Setup Git-AI",
        "icon": "$(terminal)"
      },
      {
        "command": "flutter-toolbox.gitPush",
        "title": "Git: Push to Branch",
        "icon": "$(arrow-up)"
      },
      {
        "command": "flutter-toolbox.gitPull",
        "title": "Git: Pull from Branch",
        "icon": "$(arrow-down)"
      },
      {
        "command": "flutter-toolbox.gitCommit",
        "title": "Git: Commit with Type",
        "icon": "$(git-commit)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "flutter-toolbox.refreshView",
          "when": "view == flutterToolboxView",
          "group": "navigation"
        },
        {
          "command": "flutter-toolbox.clearSessions",
          "when": "view == flutterToolboxView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "flutter-toolbox",
      "properties": {
        "flutterToolbox.flutterCommand": {
          "type": "string",
          "default": "fvm flutter",
          "description": "Flutter command prefix (e.g., 'fvm flutter', 'flutter', or custom)",
          "enum": [
            "fvm flutter",
            "flutter"
          ],
          "enumDescriptions": [
            "Use FVM (Flutter Version Management)",
            "Use system Flutter"
          ]
        },
        "flutterToolbox.customFlutterCommand": {
          "type": "string",
          "default": "",
          "description": "Custom Flutter command prefix (leave empty to use the selection above)"
        },
        "flutterToolbox.customCommands": {
          "type": "array",
          "default": [],
          "description": "Workspace-specific custom commands",
          "scope": "resource",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the command"
              },
              "name": {
                "type": "string",
                "description": "Display name of the command"
              },
              "description": {
                "type": "string",
                "description": "Brief description of what the command does"
              },
              "command": {
                "type": "string",
                "description": "The actual command to execute"
              },
              "workingDirectory": {
                "type": "string",
                "description": "Optional working directory (defaults to workspace root)"
              },
              "requiresConfirmation": {
                "type": "boolean",
                "description": "Whether to ask for confirmation before running"
              },
              "scope": {
                "type": "string",
                "enum": ["global", "workspace"],
                "description": "Scope of the command (global or workspace)"
              }
            },
            "required": [
              "id",
              "name",
              "description",
              "command"
            ]
          }
        },
        "flutterToolbox.globalCustomCommands": {
          "type": "array",
          "default": [],
          "description": "Global custom commands available in all workspaces",
          "scope": "application",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the command"
              },
              "name": {
                "type": "string",
                "description": "Display name of the command"
              },
              "description": {
                "type": "string",
                "description": "Brief description of what the command does"
              },
              "command": {
                "type": "string",
                "description": "The actual command to execute"
              },
              "workingDirectory": {
                "type": "string",
                "description": "Optional working directory (defaults to workspace root)"
              },
              "requiresConfirmation": {
                "type": "boolean",
                "description": "Whether to ask for confirmation before running"
              },
              "scope": {
                "type": "string",
                "enum": ["global", "workspace"],
                "description": "Scope of the command (global or workspace)"
              }
            },
            "required": [
              "id",
              "name",
              "description",
              "command"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
